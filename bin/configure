#!/usr/bin/env bash

${DEBUG:-}

set -eu

keep_alive() {
  while true; do
    sleep 600
    echo -e "\n\n\t\tI am alive\n\n"
  done
}

trap 'kill $(jobs -p)' EXIT

keep_alive&

nixrc=~/.nix-profile/etc/profile.d/nix.sh
[[ -f ${nixrc} ]] && source ${nixrc}
cabal2nix --shell . >shell.nix
nix-shell -I ~ --command 'cabal configure'

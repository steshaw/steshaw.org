#!/bin/bash

if [[ -d /opt/ghc/${GHC_VERSION} ]]; then
  echo Using cached install of GHC ${GHC_VERSION}
else
  retry="$(which travis_retry)"
  ${retry} sudo add-apt-repository -y ppa:hvr/ghc
  ${retry} sudo apt-get update
  ${retry} sudo apt-get install cabal-install-${CABAL_VERSION} ghc-${GHC_VERSION}
fi

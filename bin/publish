#!/usr/bin/env bash

set -eu
${DEBUG:-}

#
# Make talks.
#
for f in talks/*/index.org; do
  dir=$(dirname $f)
  if [[ -d ${dir} ]]; then
    (
      echo Building ${dir}
      cd ${dir}
      make
    )
  fi
done

#
# Build and deploy to GHP.
#
bin/build && bin/site-rebuild && bin/deploy-to-github-pages
